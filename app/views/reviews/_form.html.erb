<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :stars %>
    <%= f.input :comments %>
    <%= f.hidden_field :contact_id , :value => params[:contact_id]  %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
